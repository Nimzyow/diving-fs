{
    "name": "backend",
    "version": "1.0.0",
    "description": "A node GraphQL backend with Apollo server, prisma (orm) and nexus (code first approach to creating SDL) backend",
    "author": {
        "name": "Nima Soufiani",
        "email": "nimasoufiani@gmail.com",
        "url": "https://www.linkedin.com/in/nima-soufiani-555a76198/"
    },
    "resolutions": {
        "graphql": "^15.5.3"
    },
    "scripts": {
        "type-watch": "tsc --watch --noEmit --project './tsconfig.json'",
        "type-check": "tsc --noEmit --project './tsconfig.json'",
        "generate": "npx ts-node --transpile-only src/schema",
        "test": "jest --detectOpenHandles",
        "dev": "ts-node-dev --transpile-only --no-notify src/server.ts"
    },
    "jest": {
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "warnOnly": true
                }
            }
        },
        "testEnvironment": "node"
    },
    "prisma": {
        "seed": "npx ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^3.0.2",
        "@types/graphql-iso-date": "^3.4.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "apollo-server": "^3.3.0",
        "apollo-server-core": "^3.3.0",
        "apollo-server-express": "^3.3.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "express": "^4.17.1",
        "graphql": "^15.5.3",
        "graphql-iso-date": "^3.6.1",
        "jest-mock-extended": "^2.0.2-beta2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "nexus": "^1.1.0",
        "nexus-plugin-prisma": "^0.35.0",
        "nodemon": "^2.0.12",
        "sqlite3": "^5.0.2",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "ts-toolbelt": "^9.6.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^27.0.1",
        "@types/node": "^10.17.60",
        "@types/sqlite3": "^3.1.7",
        "get-port": "^5.1.1",
        "graphql-request": "^3.5.0",
        "jest": "^27.2.0",
        "prettier": "^2.4.1",
        "prisma": "^3.0.2",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.2"
    }
